<resources xmlns:android="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <!--<style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">-->
    <style name="AppTheme" parent="android:Theme.DeviceDefault.Light.DarkActionBar">

    <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="TabTheme" parent="android:Theme.Holo.Light"/>
    <style name="details_txt_checkbox">
        <item name="android:textSize">18dp</item>

        <item name="android:textColor">@color/details_txt</item>
    </style>
    <style name="details_txt_bold">
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/details_txt</item>
    </style>
    <style name="details_txt_bold_list">
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/details_txt</item>
    </style>
    <style name="details_txt">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/details_txt</item>
        <item name="colorControlNormal">@color/primary</item>
        <item name="colorControlActivated">@color/primary</item>
        <item name="colorControlHighlight">@color/primary</item>

    </style>
    <style name="details_txt_list">
        <item name="android:textSize">13dp</item>
        <item name="android:textColor">@color/details_txt</item>
    </style>
    <style name="list_txt">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/list_txt</item>
    </style>
    <style name="list_txt_bold">
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/list_txt</item>
    </style>
    <style name="btn_default">
        <item name="android:background">@drawable/button_drawable</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
    <style name="blue_btn_default">
        <item name="android:background">@drawable/blue_button_drawable</item>
        <item name="android:textColor">@color/colorLight</item>
    </style>
    <style name="grn_btn_default">
        <item name="android:background">@drawable/grn_button_drawable</item>
        <item name="android:textColor">@color/purchase</item>
    </style>

    <style name="separator">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/separator</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>
    <style name="ToolbarTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColorPrimary">@color/txt_light</item>
        <item name="android:textColorSecondary">@color/brand</item>
        <item name="android:textColor">@color/details_txt</item>

    </style>`

    <style name="EditTextHint" parent="TextAppearance.AppCompat">
        <item name="colorAccent">@android:color/holo_purple</item>
        <item name="android:textColorHint">@color/primary</item>
        <item name="colorControlNormal">@color/primary_dark</item>
        <item name="colorControlActivated">@color/primary</item>
        <item name="colorControlHighlight">@color/primary_dark</item>
    </style>



    <style name="TextAppearence.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="colorControlNormal">@color/colorPrimary</item>

        //added attributes
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>

    </style>



    <style name="TextLabel" parent="TextAppearance.AppCompat">

        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">#fff</item>
        <item name="android:textSize">20sp</item>

        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->

        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="colorControlNormal">@color/colorPrimaryDark</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
    </style>


    <style name="TextAppearance.App.TextInputLayout" parent="@android:style/TextAppearance">
    </style>
</resources>
