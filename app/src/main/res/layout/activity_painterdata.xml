<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/txt_light"
    android:padding="10dp">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/linear"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/shop_name"
                        style="@style/details_txt_bold"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:inputType="textCapWords"
                        android:id="@+id/name"
                        style="@style/details_txt"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mobile_no"
                        style="@style/details_txt_bold"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/details_txt"
                            android:id="@+id/mobEdit"
                            android:inputType="phone"
                            android:maxLength="10"
                            android:singleLine="true"
                            android:digits="1234567890"
                            android:layout_gravity="center"
                            android:layout_weight="10"/>
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginTop="@dimen/activity_vertical_margin">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Business Started year"
                        style="@style/details_txt_bold"
                        android:textColor="@color/black"
                        android:layout_weight="1"/>
                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:inputType="phone"
                        android:maxLength="10"
                        android:digits="1234567890"
                        android:singleLine="true"
                        android:id="@+id/business_started_year"
                        style="@style/details_txt"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginTop="@dimen/activity_vertical_margin">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Qualification"
                        style="@style/details_txt_bold"
                        android:textColor="@color/black"
                        android:layout_weight="1"/>
                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:singleLine="true"
                        android:inputType="textCapWords"
                        android:id="@+id/qualification"
                        style="@style/details_txt"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginTop="@dimen/activity_vertical_margin">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Team Size"
                        style="@style/details_txt_bold"
                        android:textColor="@color/black"
                        android:layout_weight="1"/>
                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:inputType="phone"
                        android:maxLength="10"
                        android:digits="1234567890"
                        android:singleLine="true"
                        android:id="@+id/team_size"
                        style="@style/details_txt"/>

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginTop="@dimen/activity_vertical_margin">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Dealer Code"
                        style="@style/details_txt_bold"
                        android:textColor="@color/black"
                        android:layout_weight="1"/>
                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:inputType="phone"
                        android:maxLength="10"
                        android:digits="1234567890"
                        android:singleLine="true"
                        android:id="@+id/dealer_code"
                        style="@style/details_txt"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginTop="@dimen/activity_vertical_margin">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Dealer Name"
                        style="@style/details_txt_bold"
                        android:textColor="@color/black"
                        android:layout_weight="1"/>
                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:singleLine="true"
                        android:inputType="textCapWords"
                        android:id="@+id/dealer_name"
                        style="@style/details_txt"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginTop="@dimen/activity_vertical_margin">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Dealer Contact"
                        style="@style/details_txt_bold"
                        android:textColor="@color/black"
                        android:layout_weight="1"/>
                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:inputType="phone"
                        android:maxLength="10"
                        android:digits="1234567890"
                        android:singleLine="true"
                        android:id="@+id/dealer_contact"
                        style="@style/details_txt"/>

                 </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginTop="@dimen/activity_vertical_margin">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Reference Code"
                        style="@style/details_txt_bold"
                        android:textColor="@color/black"
                        android:layout_weight="1"/>
                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:inputType="phone"
                        android:maxLength="10"
                        android:digits="1234567890"
                        android:singleLine="true"
                        android:id="@+id/npp"
                        style="@style/details_txt"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginTop="@dimen/activity_vertical_margin">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Order Booking"
                        style="@style/details_txt_bold"
                        android:textColor="@color/black"
                        android:layout_weight="1"/>
                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:inputType="phone"
                        android:maxLength="10"
                        android:digits="1234567890"
                        android:singleLine="true"
                        android:id="@+id/order_booking"
                        style="@style/details_txt"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginTop="@dimen/activity_vertical_margin">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Remark 1"
                        style="@style/details_txt_bold"
                        android:textColor="@color/black"
                        android:layout_weight="1"/>
                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:inputType="textCapWords"
                        android:singleLine="true"
                        android:id="@+id/remark1"
                        style="@style/details_txt"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginTop="@dimen/activity_vertical_margin">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Remark 2"
                        style="@style/details_txt_bold"
                        android:textColor="@color/black"
                        android:layout_weight="1"/>
                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:singleLine="true"
                        android:inputType="textCapWords"
                        android:id="@+id/remark2"
                        style="@style/details_txt"/>

                </LinearLayout>

                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="2dp"
                     android:visibility="gone"
                     android:orientation="vertical"
                     android:id="@+id/village_field">
                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="Dealer Name"
                         android:id="@+id/village_heading"
                         style="@style/details_txt_bold"/>
                     <RelativeLayout
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:layout_marginRight="3dp"
                         android:layout_marginTop="10dp"
                         android:background="@drawable/edit_text_border"
                         android:orientation="horizontal">

                         <Spinner
                             android:id="@+id/dealer"
                             android:layout_width="match_parent"
                             android:layout_height="50dp"
                             android:background="@android:color/transparent"
                             android:gravity="center"
                             android:spinnerMode="dropdown">
                         </Spinner>

                         <ImageView
                             android:layout_width="50dp"
                             android:layout_height="50dp"
                             android:layout_alignParentRight="true"
                             android:layout_centerVertical="true"
                             android:layout_gravity="center"
                             android:src="@drawable/drop" />
                     </RelativeLayout>
                 </LinearLayout>

            </LinearLayout>
            <Button
                android:id="@+id/save_info"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_height"
                android:layout_gravity="center"
                android:layout_below="@+id/linear"
                android:text="@string/save"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:onClick="onSave"
                android:alpha="0.8"
                android:textStyle="bold"
                style="@style/blue_btn_default"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>


    </ScrollView>


</RelativeLayout>